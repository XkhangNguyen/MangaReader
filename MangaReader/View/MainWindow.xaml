<Window x:Class="MangaReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manga Reader" Height="1080" Width="1080"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#002e36" BorderBrush="#02a2ba" BorderThickness="0,0,1,0" Grid.Column="0" Width="80">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Button Command="{Binding NavigateBackCommand}">Back</Button>
            </Grid>
        </Border>
        <ContentControl Grid.Column="1" x:Name="Scenes"
                        Content="{Binding Navigation.CurrentView}"/>
    </Grid>
</Window>
