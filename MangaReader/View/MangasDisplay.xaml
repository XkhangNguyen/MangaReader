<UserControl x:Class="MangaReader.View.MangasDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:MangaReader.Utilities"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="960"
             Style="{StaticResource Scene_Style}"
             >
    <UserControl.Resources>
        <utils:ChapterCountToChapterSubsetConverter x:Key="ChapterCountToChapterSubsetConverter" />
    </UserControl.Resources>
    <Grid Background="{DynamicResource BackgroundColor}">
        <ScrollViewer PreviewMouseWheel="OuterScrollViewer_PreviewMouseWheel" x:Name="OuterScrollViewer" VerticalScrollBarVisibility="Visible" MaxHeight="2160"  utils:ScrollViewerMouseWheelBehavior.IncreaseScrollSpeed="True">
            <ItemsControl ItemsSource="{Binding MangaModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="10" Columns="3"  MaxWidth="1080"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Transparent" Margin="6.5" Padding="0,0,0,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Manga Cover Image -->
                                <Button Grid.Column="0"
                                    Command="{Binding DataContext.ShowMangaDetailCommand, 
                                                  RelativeSource={RelativeSource 
                                                  AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                >
                                    <Image Source="{Binding CoverImageUrl}" Style="{StaticResource CoverImage_Style}"/>
                                </Button>

                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Manga Title -->
                                    <Button Style="{DynamicResource LinkButton_Style}" Margin="0,10,0,0" Padding="0" Grid.Row="0" HorizontalAlignment="Left"
                                    Command="{Binding DataContext.ShowMangaDetailCommand, 
                                                      RelativeSource={RelativeSource 
                                                      AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    >
                                        <TextBlock Text="{Binding MangaTitle}" Style="{StaticResource MangaTitle_Style}"/>
                                    </Button>

                                    <TextBlock Grid.Row="1" Text="Chapters" Style="{StaticResource ChapterTitle_Style}"/>
                                    <ScrollViewer MouseEnter="InnerScrollViewer_MouseEnter" MouseLeave="InnerScrollViewer_MouseLeave" Grid.Row="2" MaxHeight="150" VerticalScrollBarVisibility="Hidden">
                                        <TextBlock  Text="{Binding MangaDescription}" Style="{StaticResource MangaDescriptionDisplay_Style}"/>
                                    </ScrollViewer>

                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
